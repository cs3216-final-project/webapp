<a class="navmenu-brand" href="#">Synthery</a>
<select id="device-select" name="device" class="form-control">
  {{#select this.currentDevice.given_id}}
    <option class="list-group-item device-btn" value="" selected>
      Choose Device
    </option>
    {{#each devices}}
      <option value="{{this.given_id}}" data-id="{{this.id}}">
        {{this.name}}
      </option>
    {{/each}}
  {{/select}}
</select>
<div class="current-device-wrapper">
  <button class="btn btn-primary btn-block device-save-btn">
    Save Mappings
  </button>
</div>
<div class="new-map">
  <div class="alert alert-info" role="alert">Push any Control on your MIDI Device</div>
  <div class="bpm-input input-group">
      <span class="input-group-btn">
        <button class="bpm-btn btn btn-default" type="button">Set BPM</button>
      </span>
      <input type="number" class="form-control" placeholder="{{currentBPM}}">
  </div>
</div>
<div id="map-elements">
  {{#if currentMappingProfile}}
    {{#each currentMappingProfile.code_maps}}
      <div class="map row" data-id="{{this.code}}">
        <div class="midi-code col-md-3">
          <span>{{this.code}}</span>
        </div>
        <div class="map-details col-md-8">
          <div class="map-animation-selector row">
            <form>
              <select name="anim" class="animation-select form-control">
                {{#select this.animation}}
                  <option class="list-group-item anim-btn" data-midicode="{{../code}}" value="" selected>
                    Choose Animation
                  </option>
                  {{#each ../animations}}
                    <option class="list-group-item anim-btn" data-midicode="{{../code}}" value="{{this.key}}">
                      {{this.name}}
                    </option>
                  {{/each}}
                {{/select}}
              </select>
            </form>
          </div>
          <div class="map-controls row">
            <button type="button" class="btn btn-labeled btn-primary btn-small trigger-map" data-midicode="{{this.code}}">
              <span class="btn-label"><i class="glyphicon glyphicon-play-circle"></i></span>
              Trigger
            </button>
            <button type="button" class="btn btn-danger btn-small remove-map" data-midicode="{{this.code}}">
              <i class="glyphicon glyphicon-trash"></i>
            </button>
          </div>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>
